#include<stdio.h>
#include<stdlib.h>
#include <time.h>
#include <locale.h>

double randomx(){
    setlocale(LC_ALL, "Rus");
    srand(time(0));
    int a = rand()%2001;
    double x = a/1000 -1;
    return x;
}
double randomy(){
    setlocale(LC_ALL, "Rus");
    srand(time(0));
    int a = rand()%2001;
    double y = a/1000 -1;
    return y;
}

int sqrr(){
    double x = randomx();
    double y = randomy();
    double s = x*x + y*y;
    int k = 0;
    if (s <= 1) {
        k++;

    }
    return k;
}

double pi(int a){
    int c = 0;
    int s;
    for(s = 1; s<= a; s++){

        int n = sqrr();
        c += n;
    }
    double p = (4.0*c)/s;
    return p;
}
int main()
{
    setlocale(LC_ALL, "Rus");
    srand(time(0));
    int a;
    scanf("%d", &a);
    double lp = pi(a);
    printf("%f", lp);






    return 0;
}

