#include<stdio.h>
#include<stdlib.h>
#include <time.h>
#include <locale.h>

int randoms(){
    setlocale(LC_ALL, "Rus");
    srand(time(0));

    int a = rand()%200 ;
    int b = rand()%200 ;
    int x = a - 100 ;
    int y = b - 100;
    int s = x*x + y*y;
    int k = 0;
    if (s <= 10000) {
        k++;

    }
    return k;
}

int main()
{
    setlocale(LC_ALL, "Rus");
    srand(time(0));
    int l = 0;
    double m = 0;
    double divis = 0;
    double pi;
    while (m < 2000){

        m++;

        l += randoms();




    }
    printf("%f", l);
    printf("%f", m);
    pi = l/m;
    printf("%f", pi);


    return 0;
}
